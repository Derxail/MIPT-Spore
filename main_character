import pygame

# Инициализация Pygame
pygame.init()

# Определение цветов
WHITE = (255, 255, 255)

# Создание класса для главного персонажа
x = WIDTH // 2
y = HEIGHT // 2


class MainCharacter:
    def __init__(self, x, y):
        self.x = x
        self.y = y
       # self.radius = radius
        __self.width=200
        __self.height = 100

    def draw(self, screen):
        pygame.draw.ellipse()(screen, WHITE, (self.x, self.y, __self.width, __self.height))

# Задание размеров окна
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Овал-персонаж")

main_character = MainCharacter(WIDTH // 2, HEIGHT // 2)

# Основной игровой цикл
running = True
while running:
    screen.fill((0, 0, 0))  # Очистка экрана

    # Обработка событий
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    # Рисование главного персонажа
    main_character.draw(screen)

    pygame.display.flip()  # Обновление экрана

# Завершение игры
pygame.quit()
